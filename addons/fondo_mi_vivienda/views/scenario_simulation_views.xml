<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_scenario_simulation_list" model="ir.ui.view">
        <field name="name">fondo_mi_vivienda.scenario_simulation.list</field>
        <field name="model">fondo_mi_vivienda.scenario_simulation</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="proyecto_id" />
                <field name="producto_financiero_id" />
                <field name="plazo_meses"/>
                <field name="estado"/>
            </list>
        </field>
    </record>

    <record id="view_scenario_simulation_form" model="ir.ui.view">
        <field name="name">fondo_mi_vivienda.scenario_simulation.form</field>
        <field name="model">fondo_mi_vivienda.scenario_simulation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_calculate_schedule" 
                                string="Calcular Cronograma" 
                                type="object" 
                                class="btn-primary"
                    />
                    <button name="action_export_pdf" 
                                string="Exportar a PDF" 
                                type="object" 
                                class="btn-secondary"
                    />
                    <button name="action_view_schedule_graph" 
                                string="Ver Gráfico" 
                                type="object" 
                                class="btn-secondary"
                                icon="fa-line-chart"
                                invisible="not lineas_cronograma_cuota_ids"
                    />
                    <field name="estado" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre de la Simulación de Escenario..."/>
                        </h1>
                    </div>
                    <group>
                        <group string="Información General">
                            <field name="cliente_id"/>
                            <field name="proyecto_id"/>
                            <field name="producto_financiero_id"/>
                            <field name="moneda_id" invisible="not producto_financiero_id"/>
                            <field name="plazo_meses"/>
                        </group>
                        <group string="Información Cliente" invisible="not cliente_id">
                            <field name="aplicar_a_bbp_integrador"/>
                            <field name="ha_recibido_apoyo_habitacional_antes"/>
                        </group>
                    </group>
                    <group string="Datos Financieros" invisible="not producto_financiero_id">
                        <group>
                            <field name="valor_vivienda"/>
                            <field name="cuota_inicial"/>
                            <field name="porcentaje_de_cuota_inicial" widget="percentage"/>
                            <field name="monto_a_financiar" />
                        </group>
                        <group>
                            <field name="seguro_desgravamen_mensual" widget="percentage"/>
                            <field name="seguro_de_inmueble_anual" widget="percentage"/>
                            <field name="tea" widget="percentage"/>
                            <field name="tcea" widget="percentage"/>
                            <field name="cuota_mensual" widget="monetary" options="{'currency_field': 'moneda_id'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Cronograma de Pagos" invisible="not lineas_cronograma_cuota_ids">
                            <field name="lineas_cronograma_cuota_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_scenario_simulation_search" model="ir.ui.view">
        <field name="name">fondo_mi_vivienda.scenario_simulation.search</field>
        <field name="model">fondo_mi_vivienda.scenario_simulation</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_scenario_simulation" model="ir.actions.act_window">
        <field name="name">Simulaciones de Escenario</field>
        <field name="res_model">fondo_mi_vivienda.scenario_simulation</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_scenario_simulation_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea una nueva simulación de escenario
            </p>
        </field>
    </record>
</odoo>