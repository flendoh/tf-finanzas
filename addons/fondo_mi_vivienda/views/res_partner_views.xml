<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista heredada del formulario de contacto -->
        <record id="view_partner_form_fondo_mi_vivienda" model="ir.ui.view">
            <field name="name">res.partner.form.mivivienda</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_button_box']" position="inside">
                    <button class="oe_stat_button" type="object" name="action_view_simulaciones" icon="fa-folder">
                        <field string="Simulaciones" name="simulaciones_count" widget="statinfo"/>
                    </button>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Fondo Mi Vivienda">
                        <group string="InformaciÃ³n">
                            <field name="aplicar_a_bbp_integrador" />
                            <field name="ha_recibido_apoyo_habitacional_antes" />
                        </group>
                        <group string="Datos Financieros">
                            <field name="moneda_id" />
                            <field name="ingreso_financiero"/>
                            <field name="gastos_financieros" />
                            <field name="deudas_financieras" />
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>