<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_financial_product_list" model="ir.ui.view">
        <field name="name">fondo_mi_vivienda.financial_product.list</field>
        <field name="model">fondo_mi_vivienda.financial_product</field>
        <field name="arch" type="xml">
            <list string="Entidades Financieras">
                <field name="name"/>
                <field name="moneda_id"/>
                <field name="tipo_tasa"/>
                <field name="valor_tasa" widget="percentage"/>
                <field name="tea" widget="percentage"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_financial_product_form" model="ir.ui.view">
        <field name="name">fondo_mi_vivienda.financial_product.form</field>
        <field name="model">fondo_mi_vivienda.financial_product</field>
        <field name="arch" type="xml">
            <form string="Entidades Financieras">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre de la Entidad Financiera..."/>
                        </h1>
                    </div>
                    <group>
                        <group string="Información General">
                            <field name="moneda_id"/>
                            <field name="seguro_desgravamen_mensual" class="oe_inline" widget="percentage"/>
                            <field name="seguro_de_inmueble_anual" class="oe_inline" widget="percentage"/>
                            <field name="gastos_iniciales"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Configuración de Tasa">
                            <field name="tipo_tasa"/>
                            <field name="valor_tasa" widget="percentage" class="oe_inline"/>
                            <field name="tea" widget="percentage"/>
                        </group>

                        <group string="Opciones de Tasa Nominal" invisible="tipo_tasa != 'nominal'">
                            <group>
                                <field name="periodo_tasa_nominal"/>
                                <field name="capitalizacion_tasa_nominal"/>
                            </group>
                        </group>
                        
                        <group string="Opciones de Tasa Efectiva" invisible="tipo_tasa != 'effective'">
                            <group>
                                <field name="periodo_tasa_efectiva"/>
                            </group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_financial_product_search" model="ir.ui.view">
        <field name="name">fondo_mi_vivienda.financial_product.search</field>
        <field name="model">fondo_mi_vivienda.financial_product</field>
        <field name="arch" type="xml">
            <search string="Buscar Entidades Financieras">
                <field name="name"/>
                <field name="moneda_id"/>
                <field name="tipo_tasa"/>
                <filter string="Activo" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivo" name="inactive" domain="[('active', '=', False)]"/>
                <group string="Agrupar por">
                    <filter string="Tipo de Tasa" name="group_rate_type" context="{'group_by': 'tipo_tasa'}"/>
                    <filter string="Moneda" name="group_currency" context="{'group_by': 'moneda_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_financial_product_kanban" model="ir.ui.view">
        <field name="name">financial.product.kanban</field>
        <field name="model">fondo_mi_vivienda.financial_product</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section"/>
                                <ul>
                                    <li>
                                        <i class="fa fa-money"/> <field name="moneda_id"/>
                                    </li>
                                    <li>
                                        <i class="fa fa-area-chart"/> TEA <field name="tea" widget="percentage"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_financial_product" model="ir.actions.act_window">
        <field name="name">Entidades Financieras</field>
        <field name="res_model">fondo_mi_vivienda.financial_product</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_financial_product_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea un nuevo producto financiero
            </p>
        </field>
    </record>
</odoo>