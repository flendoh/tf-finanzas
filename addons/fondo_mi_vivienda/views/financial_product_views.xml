<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_financial_product_list" model="ir.ui.view">
        <field name="name">fondo_mi_vivienda.financial_product.list</field>
        <field name="model">fondo_mi_vivienda.financial_product</field>
        <field name="arch" type="xml">
            <list string="Productos Financieros">
                <field name="name"/>
                <field name="currency_id"/>
                <field name="rate_type"/>
                <field name="rate_value" widget="percentage"/>
                <field name="tea" widget="percentage"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_financial_product_form" model="ir.ui.view">
        <field name="name">fondo_mi_vivienda.financial_product.form</field>
        <field name="model">fondo_mi_vivienda.financial_product</field>
        <field name="arch" type="xml">
            <form string="Productos Financieros">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del Producto Financiero..."/>
                        </h1>
                    </div>
                    <group string="Información General">
                        <group>
                            <field name="currency_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Configuración de Tasa">
                            <field name="rate_type"/>
                            <field name="rate_value" widget="percentage" class="oe_inline"/>
                            <field name="tea" widget="percentage"/>
                        </group>

                        <group string="Opciones de Tasa Nominal" invisible="rate_type != 'nominal'">
                            <group>
                                <field name="nominal_rate_period"/>
                                <field name="nominal_rate_capitalization"/>
                            </group>
                        </group>
                        
                        <group string="Opciones de Tasa Efectiva" invisible="rate_type != 'effective'">
                            <group>
                                <field name="effective_rate_period"/>
                            </group>
                        </group>
                            
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_financial_product_search" model="ir.ui.view">
        <field name="name">fondo_mi_vivienda.financial_product.search</field>
        <field name="model">fondo_mi_vivienda.financial_product</field>
        <field name="arch" type="xml">
            <search string="Buscar Productos Financieros">
                <field name="name"/>
                <field name="currency_id"/>
                <field name="rate_type"/>
                <filter string="Activo" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivo" name="inactive" domain="[('active', '=', False)]"/>
                <group string="Agrupar por">
                    <filter string="Tipo de Tasa" name="group_rate_type" context="{'group_by': 'rate_type'}"/>
                    <filter string="Moneda" name="group_currency" context="{'group_by': 'currency_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_financial_product" model="ir.actions.act_window">
        <field name="name">Productos Financieros</field>
        <field name="res_model">fondo_mi_vivienda.financial_product</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_financial_product_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea un nuevo producto financiero
            </p>
        </field>
    </record>
</odoo>