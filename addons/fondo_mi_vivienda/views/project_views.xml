<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_list" model="ir.ui.view">
        <field name="name">fondo_mi_vivienda.project.list</field>
        <field name="model">fondo_mi_vivienda.project</field>
        <field name="arch" type="xml">
            <list string="Proyectos">
                <field name="name"/>
                <field name="valor_vivienda"/>
                <field name="tipo_propiedad"/>
                <field name="departamento"/>
                <field name="es_vivienda_sostenible"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_project_form" model="ir.ui.view">
        <field name="name">fondo_mi_vivienda.project.form</field>
        <field name="model">fondo_mi_vivienda.project</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_expedientes" type="object" class="oe_stat_button" icon="fa-folder-open">
                            <field name="expediente_count" widget="statinfo" string="Expedientes"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del Proyecto..."/>
                        </h1>
                    </div>
                    <group>
                        <group string="Información General">
                            <field name="tipo_propiedad"/>
                            <field name="es_vivienda_sostenible"/>
                            <field name="moneda_id"/>
                            <field name="valor_vivienda"/>
                        </group>
                        <group string="Ubicación">
                            <field name="calle"/>
                            <field name="departamento"/>
                            <field name="ciudad"/>
                        </group>
                    </group>
                    <group string="Estado del Proyecto">
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_project_search" model="ir.ui.view">
        <field name="name">fondo_mi_vivienda.project.search</field>
        <field name="model">fondo_mi_vivienda.project</field>
        <field name="arch" type="xml">
            <search string="Buscar Proyectos">
                <field name="name"/>
                <field name="tipo_propiedad"/>
                <field name="ciudad"/>
                <filter string="Activos" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivos" name="inactive" domain="[('active', '=', False)]"/>
                <group string="Agrupar por">
                    <filter string="Tipo de Propiedad" name="group_property_type" context="{'group_by': 'tipo_propiedad'}"/>
                    <filter string="Departamento" name="group_department" context="{'group_by': 'departamento'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_project_kanban" model="ir.ui.view">
        <field name="name">project.kanban</field>
        <field name="model">fondo_mi_vivienda.project</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section"/>
                                <ul>
                                    <li>
                                        <i class="fa fa-home"/> <field name="tipo_propiedad"/>
                                    </li>
                                    <li>
                                        <i class="fa fa-money"/> <field name="valor_vivienda"/> <field name="moneda_id" />
                                    </li>
                                    <li invisible="not departamento">
                                        <i class="fa fa-map-marker"/> <field name="departamento"/>
                                    </li>
                                    <li invisible="not es_vivienda_sostenible">
                                        <i class="fa fa-leaf text-success" title="Vivienda Sostenible"/> Vivienda Sostenible
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_project" model="ir.actions.act_window">
        <field name="name">Proyectos</field>
        <field name="res_model">fondo_mi_vivienda.project</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_project_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea un nuevo proyecto de vivienda
            </p>
        </field>
    </record>
</odoo>