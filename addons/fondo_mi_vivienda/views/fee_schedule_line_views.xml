<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fee_schedule_line_list" model="ir.ui.view">
        <field name="name">fondo_mi_vivienda.fee_schedule_line.list</field>
        <field name="model">fondo_mi_vivienda.fee_schedule_line</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="periodo"/>
                <field name="saldo_inicial" widget="monetary" options="{'currency_field': 'moneda_id'}"/>
                <field name="amortizacion" widget="monetary" options="{'currency_field': 'moneda_id'}"/>
                <field name="intereses" widget="monetary" options="{'currency_field': 'moneda_id'}"/>
                <field name="seguro_desgravamen" widget="monetary" options="{'currency_field': 'moneda_id'}"/>
                <field name="seguro_inmueble" widget="monetary" options="{'currency_field': 'moneda_id'}"/>
                <field name="saldo_final" widget="monetary" options="{'currency_field': 'moneda_id'}"/>
                <field name="cuota_mensual" widget="monetary" options="{'currency_field': 'moneda_id'}"/>
                <field name="moneda_id" optional="1"/>
            </list>
        </field>
    </record>
</odoo>