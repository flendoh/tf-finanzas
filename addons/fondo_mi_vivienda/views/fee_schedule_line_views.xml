<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fee_schedule_line_list" model="ir.ui.view">
        <field name="name">fondo_mi_vivienda.fee_schedule_line.list</field>
        <field name="model">fondo_mi_vivienda.fee_schedule_line</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="saldo_inicial"/>
                <field name="amortizacion"/>
                <field name="seguro_desgravamen"/>
                <field name="seguro_inmueble"/>
                <field name="saldo_final"/>
                <field name="pago_mensual"/>
                <field name="moneda_id" optional="1"/>
            </list>
        </field>
    </record>
</odoo>